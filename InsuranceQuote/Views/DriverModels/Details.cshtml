@model InsuranceQuote.Models.DriverModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>DriverModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Vehicles)
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Year</th>
                </tr>
                @if (Model.Vehicles != null)
                {
                    foreach (var item in Model.Vehicles)
                    {
                        <tr>
                            @Html.DisplayFor(Model => item.Make)
                        </tr>
                        <tr>
                            @Html.DisplayFor(Model => item.Model)
                        </tr>
                        <tr>
                            @Html.DisplayFor(Model => item.Year)
                        </tr>
                    }
                }
            </table>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quotes)
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Vehicle</th>
                    <th>Annual Milage</th>
                    <th>Zip Code</th>
                    <th>Annual Premium</th>
                </tr>
                @if (Model.Quotes != null)
                {
                    foreach (var item in Model.Quotes)
                    {
                        <tr>
                            @Html.DisplayFor(Model => item.Year) @Html.DisplayFor(Model => item.Make) @Html.DisplayFor(Model => item.Model)
                        </tr>
                        <tr>
                            @Html.DisplayFor(Model => item.AnnualMilage)
                        </tr>
                        <tr>
                            @Html.DisplayFor(Model => item.ZipCode)
                        </tr>
                        <tr>
                            @Html.DisplayFor(Model => item.AnnualPremium)
                        </tr>
                    }
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
